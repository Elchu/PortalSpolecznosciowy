@model PagedList.IPagedList<PortalSpolecznosciowy.Models.Post>
@using PagedList.Mvc;
@*@model IEnumerable<PortalSpolecznosciowy.Models.Post>*@
@using Microsoft.AspNet.Identity
@using PortalSpolecznosciowy.Models

@section Styles {
    <link href=@Url.Content("~/Content/PagedList.css") rel="stylesheet" type="text/css" />
}

@{
    ViewBag.Title = "Wpisy przyjaciół";
}
<br />

<div class="row">

    <div class="col-md-3 col-md-offset-1">
        @Html.Partial("_userProfilPartial", (ApplicationUser)ViewBag.User)
    </div>

    <div class="col-md-7">
        @Html.Partial("_formAddedPostPartial", (ApplicationUser)ViewBag.User)

        @Html.Partial("_displayPostPartial", Model)

        <div class="col-md-7 text-center">
            Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}